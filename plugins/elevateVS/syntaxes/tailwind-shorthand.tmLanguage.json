{
  "name": "Tailwind Shorthand",
  "scopeName": "text.html.tailwind-shorthand",
  "injectionSelector": "L:source.astro meta.attribute.class.astro string.quoted",
  "patterns": [
    {
      "include": "#tailwind-shorthand"
    }
  ],
  "repository": {
    "tailwind-shorthand": {
      "patterns": [
        {
          "match": "/2xs/",
          "name": "punctuation.definition.breakpoint.2xs"
        },
        {
          "match": "/xs/",
          "name": "punctuation.definition.breakpoint.xs"
        },
        {
          "match": "/sm/",
          "name": "punctuation.definition.breakpoint.sm"
        },
        {
          "match": "/md/",
          "name": "punctuation.definition.breakpoint.md"
        },
        {
          "match": "/lg/",
          "name": "punctuation.definition.breakpoint.lg"
        },
        {
          "match": "/xl/",
          "name": "punctuation.definition.breakpoint.xl"
        },
        {
          "match": "/2xl/",
          "name": "punctuation.definition.breakpoint.2xl"
        },
        {
          "match": "/3xl/",
          "name": "punctuation.definition.breakpoint.3xl"
        }
      ]
    }
  }
}
