{
    "name": "tailwind-shorthand-highlighter",
    "displayName": "Tailwind Shorthand Highlighter",
    "description": "Syntax highlighting for Tailwind shorthand in Astro files",
    "version": "0.0.1",
    "publisher": "your-name",
    "engines": {
      "vscode": "^1.50.0"
    },
    "categories": [
      "Programming Languages"
    ],
    "contributes": {
      "grammars": [
        {
          "language": "html",
          "scopeName": "text.html.tailwind-shorthand",
          "path": "./syntaxes/tailwind-shorthand.tmLanguage.json",
          "injectTo": ["text.html", "source.astro"]
        }
      ]
    }
  }
  